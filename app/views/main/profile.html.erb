  content: '<';
  font-size: 55px;
  color: black;
}
.carouselborad{
    width: 300px;
    height:200px; 
  }
  .image{
      display: block;
      margin-left: auto;
      margin-right: auto; 
      width:auto;
      height:150px;
  } 
 .mdl-card__supporting-text{
 	width:100%!important;
 	padding: 16px 0px 0px 0px!important;
 }
